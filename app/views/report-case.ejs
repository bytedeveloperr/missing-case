<%- layout("./layouts/main") %>

<div class="row">
	<div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
		<div class="card">
		  <div class="card-body">
		    <h4 class="card-title">Report a case</h4>
		    <form class="" method="post" enctype="multipart/form-data" action="/case/report">
		    	<%- include("./partials/errors") %>
		    	<div class="form-group">
				  <label class="col-form-label" for="fullName">What is this person's full name?</label>
				  <input type="text" class="form-control" placeholder="e.g John Doe" id="fullName" name="fullName"  required/>
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="residentialAddress">Where does this person live?</label>
				  <input type="text" class="form-control" placeholder="e.g 10, GreenWood street, Malter, Lagos State" id="residentialAddress" name="residentialAddress"  required/>
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="lastAddress">Where was this person seen last?</label>
				  <input type="text" class="form-control" placeholder="e.g 10, GreenWood street, Malter, Lagos State" id="lastAddress" name="lastAddress"  required/>
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="lastState">Which state was this person last?</label>
				  <input type="text" class="form-control" placeholder="e.g Lagos State" id="lastState" name="lastState"  required/>
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="lastSeen">When was this person last seen?</label>
				  <input type="date" class="form-control" id="lastSeen" name="lastSeen"  required/>
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="languages">Which language does this person speak?</label>
				  <input type="text" class="form-control" placeholder="e.g English, Yoruba, Hausa, Igbo" id="languages" name="languages"  required/>
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="specialChar">What special characteristics does this person have?</label>
				  <input type="text" class="form-control" placeholder="e.g A star shape tatoo on the neck" id="specialChar" name="specialChar"  required/>
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="lastCloth">Where type of cloth did the person wore last?</label>
				  <input type="text" class="form-control" placeholder="e.g A black shirt, black jean and white shoe" id="lastCloth" name="lastCloth"  required/>
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="age">What is the person's age?</label>
				  <input type="number" class="form-control" placeholder="15" id="age" name="age"  required/>
				</div>
				<div class="form-group">
					<label class="col-form-label" for="gender">What is this person's gender?</label>
				    <div class="custom-control custom-radio" id="gender">
				      <input type="radio" id="male" name="gender" value="male" class="custom-control-input" checked="">
				      <label class="custom-control-label" for="male">Male</label>
				    </div>
				    <div class="custom-control custom-radio">
				      <input type="radio" id="female" value="female" name="gender" class="custom-control-input">
				      <label class="custom-control-label" for="female">Female</label>
				    </div>
				</div>
				<div class="form-group">
					<label class="col-form-label" for="image">Add person's image</label>
				    <div class="input-group mb-3">
				      <div class="custom-file">
				        <input type="file" class="custom-file-input" id="image" name="image" required>
				        <label class="custom-file-label" for="image">Choose person image</label>
				      </div>
				    </div>
				</div>
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
		    </form>
		  </div>
		</div>	
	</div>
</div>
