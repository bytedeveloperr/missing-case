<%- layout("./layouts/main") %>

<div class="row">
	<div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
		<div class="card mt-5">
		  <div class="card-body">
		    <h4 class="card-title">Register</h4>
		    <form class="" method="post" action="/register">
		    	<%- include("./partials/errors") %>
		    	<div class="form-group">
				  <label class="col-form-label" for="fullName">Full Name</label>
				  <input type="fullName" class="form-control" placeholder="Full Name" id="fullName" name="fullName" />
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="email">Email Address</label>
				  <input type="email" class="form-control" placeholder="name@site.com" id="email" name="email" />
				</div>
				<div class="form-group">
				  <label class="col-form-label" for="password">Password</label>
				  <input type="password" class="form-control" placeholder="password" id="password" name="password" />
				</div>
				<button type="submit" class="btn btn-primary">Register</button>
		    	<h3 class="text-center">OR</h3>
		    	<a href="/login" class="btn btn-info btn-block">Click Here To Login</a>
		    </form>
		  </div>
		</div>	
	</div>
</div>